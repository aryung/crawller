# ===== Existing Configuration (Keep for backward compatibility) =====
# Database Configuration
POSTGRES_DB_IP=localhost
POSTGRES_DB_PORT=5432
POSTGRES_DB_USER=your_db_user
POSTGRES_DB_PASSWORD=your_db_password
POSTGRES_DB_NAME_AHA=aha-production
POSTGRES_DB_NAME_AHA_DEV=aha-development

# Environment
NODE_ENV=development

# Pipeline Configuration
PIPELINE_BATCH_SIZE=100
PIPELINE_CONCURRENT_CRAWLERS=2
PIPELINE_DELAY_BETWEEN_REQUESTS=3000
PIPELINE_TIMEOUT=30000

# Logging
LOG_LEVEL=info

# Backend API Configuration
INTERNAL_AHA_API_URL=http://localhost:3000
# API Token for backend authentication (requires ADMIN or SUPER_ADMIN role)
# Used by scripts like import-symbols.ts for bulk operations
# Obtain from: /auth/auto-login endpoint or admin panel
INTERNAL_AHA_API_TOKEN=

# ===== Worker Mode Configuration (New) =====
# Backend API URL for task management integration
FINANCE_STRATEGY_API_URL=http://localhost:3000

# Unique identifier for this worker instance
WORKER_ID=crawler-worker-001

# Human-readable name for this worker
WORKER_NAME=Universal Crawler Worker


# ===== Version Management =====
# GitHub Personal Access Token for private repository access
# 1. Go to: https://github.com/settings/tokens
# 2. Generate a new token with 'repo' scope
# 3. Copy the token here
GITHUB_TOKEN=

# Automatic version switching when task requires different version
AUTO_VERSION_SWITCH=false

# Prefer Git tag version over package.json version when conflict
PREFER_GIT_VERSION=false

# Directory to cache different versions
VERSION_CACHE_DIR=.version-cache

# ===== Worker Capabilities =====
# Supported market regions (comma-separated)
# Options: TPE, US, JP (matching backend MarketRegion enum)
SUPPORTED_REGIONS=TPE,US,JP

# Supported data types (comma-separated)  
# Options: quarterly, daily, balance-sheet, income-statement, cash-flow-statement, metadata, earnings, dividends
SUPPORTED_DATA_TYPES=quarterly,daily,balance-sheet,income-statement,cash-flow-statement

# Maximum number of concurrent tasks this worker can handle
MAX_CONCURRENT_TASKS=3

# ===== Security =====
# API key for authentication with the server
# This should be provided by the server administrator
API_KEY=

# ===== Advanced Worker Settings =====
# Interval between task requests in milliseconds
TASK_REQUEST_INTERVAL=10000

# Heartbeat interval to maintain worker status
HEARTBEAT_INTERVAL=30000

# Timeout for version check operations
VERSION_CHECK_TIMEOUT=10000

# Automatically restart worker on critical errors
AUTO_RESTART_ON_ERROR=true

# Maximum number of retries for failed operations
MAX_ERROR_RETRIES=3

# ===== Task Execution Settings =====
# Enable debug mode for detailed logging
DEBUG_MODE=false

# Task execution timeout in milliseconds
TASK_EXECUTION_TIMEOUT=300000

# Delay between task completion and next request
TASK_COMPLETION_DELAY=1000
