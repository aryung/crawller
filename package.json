{
  "name": "universal-web-crawler",
  "version": "1.0.0",
  "description": "A universal web crawler with configurable selectors, structured output, and automated config generation for Yahoo Finance data across TW/US/JP markets",
  "main": "dist/index.js",
  "scripts": {
    "//": "=== 基礎構建與開發 (Build & Development) ===",
    "build": "npx tsc",
    "dev": "npx tsx src/index.ts",
    "start": "node dist/index.js",
    
    "//": "=== 清理命令 (Cleanup Commands) ===",
    "clean": "rimraf output dist",
    "clean:dist": "rimraf dist",
    "clean:output": "rimraf output",
    "clean:output:daily": "find output/daily -name '*.json' -delete 2>/dev/null || true",
    "clean:output:quarterly": "find output/quarterly -name '*.json' -delete 2>/dev/null || true",
    "clean:output:metadata": "find output/metadata -name '*.json' -delete 2>/dev/null || true",
    "clean:output:all": "find output -name '*.json' -delete 2>/dev/null || true",
    "clean:configs:tw": "find config-categorized -name 'yahoo-finance-tw-*.json' -delete",
    "clean:configs:us": "find config-categorized -name 'yahoo-finance-us-*.json' -delete",
    "clean:configs:jp": "find config-categorized -name 'yahoo-finance-jp-*.json' -delete",
    "clean:configs:all": "find config-categorized -name '*.json' -delete",
    "clean:outputs": "tsx scripts/clean-old-outputs.ts",
    "clean:outputs:dry": "tsx scripts/clean-old-outputs.ts --dry-run",
    "clean:outputs:verbose": "tsx scripts/clean-old-outputs.ts --verbose",
    
    "//": "=== 代碼質量檢查 (Code Quality) ===",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "typecheck": "npx tsc --noEmit",
    
    "//": "=== 爬蟲核心命令 (Core Crawler Commands) ===",
    "crawl": "npx tsx src/cli.ts crawl",
    "doctor": "npx tsx src/cli.ts doctor",
    "list": "npx tsx src/cli.ts list",
    "validate": "npx tsx src/cli.ts validate",
    "curl2config": "npx tsx src/cli.ts curl2config",
    
    "//": "=== Pipeline 工作流程 (Pipeline Workflows) ===",
    "pipeline": "npx tsx src/cli-pipeline.ts",
    "pipeline:run": "npx tsx src/cli-pipeline.ts run",
    "pipeline:stats": "npx tsx src/cli-pipeline.ts stats",
    "pipeline:clean": "npx tsx src/cli-pipeline.ts clean",
    "pipeline:all": "npx tsx src/cli-pipeline.ts run --skip-symbol-import",
    "pipeline:full": "npx tsx src/cli-pipeline.ts run --skip-symbol-import",
    "pipeline:history": "npx tsx src/cli-pipeline.ts run --data-types=history --skip-symbol-import",
    "pipeline:all-data": "npx tsx src/cli-pipeline.ts run --data-types=financials,history --skip-symbol-import",
    "pipeline:legacy": "npx tsx src/cli-pipeline.ts run",
    "pipeline:data-only": "npx tsx src/cli-pipeline.ts run --skip-crawl",
    "pipeline:crawl-only": "npx tsx src/cli-pipeline.ts run --skip-symbol-import --skip-fundamental-import --skip-label-sync",
    "pipeline:symbols-only": "npx tsx src/cli-pipeline.ts run --skip-crawl --skip-aggregate --skip-fundamental-import --skip-label-sync",
    "pipeline:labels-only": "npx tsx src/cli-pipeline.ts run --skip-crawl --skip-aggregate --skip-symbol-import --skip-fundamental-import",
    
    "//": "=== Pipeline 區域執行 (Pipeline by Region) ===",
    "pipeline:tw": "npx tsx src/cli-pipeline.ts run --regions tw --skip-symbol-import --skip-label-sync",
    "pipeline:us": "npx tsx src/cli-pipeline.ts run --regions us --skip-symbol-import --skip-label-sync",
    "pipeline:jp": "npx tsx src/cli-pipeline.ts run --regions jp --skip-symbol-import --skip-label-sync",
    "pipeline:tw:daily": "npx tsx src/cli-pipeline.ts run --regions tw --data-types history --skip-symbol-import --skip-label-sync --skip-fundamental-import",
    "pipeline:us:daily": "npx tsx src/cli-pipeline.ts run --regions us --data-types history --skip-symbol-import --skip-label-sync --skip-fundamental-import",
    "pipeline:jp:daily": "npx tsx src/cli-pipeline.ts run --regions jp --data-types history --skip-symbol-import --skip-label-sync --skip-fundamental-import",
    "pipeline:tw:quarterly": "npx tsx src/cli-pipeline.ts run --regions tw --skip-symbol-import --skip-label-sync --skip-ohlcv-import",
    "pipeline:us:quarterly": "npx tsx src/cli-pipeline.ts run --regions us --skip-symbol-import --skip-label-sync --skip-ohlcv-import",
    "pipeline:jp:quarterly": "npx tsx src/cli-pipeline.ts run --regions jp --skip-symbol-import --skip-label-sync --skip-ohlcv-import",
    "pipeline:daily": "npx tsx src/cli-pipeline.ts run --data-types history --skip-symbol-import --skip-label-sync --skip-fundamental-import",
    "pipeline:quarterly": "npx tsx src/cli-pipeline.ts run --data-types financials --skip-symbol-import --skip-label-sync --skip-ohlcv-import",
    
    "//": "=== Pipeline 重試機制 (Pipeline Retry) ===",
    "pipeline:retry": "npx tsx src/cli-pipeline.ts retry",
    "pipeline:retry-status": "npx tsx src/cli-pipeline.ts retry-status",
    "pipeline:clear-retries": "npx tsx src/cli-pipeline.ts clear-retries --force",
    "pipeline:retry-only": "npx tsx src/cli-pipeline.ts run --retry-only",
    "pipeline:no-retry": "npx tsx src/cli-pipeline.ts run --disable-retry",
    
    "//": "=== 配置生成 (Config Generation) ===",
    "update:stockcodes": "tsx scripts/update-stockcodes.ts",
    "update:stockcodes:tw": "tsx scripts/update-stockcodes.ts --market=tw",
    "update:stockcodes:us": "tsx scripts/update-stockcodes.ts --market=us",
    "update:stockcodes:jp": "tsx scripts/update-stockcodes.ts --market=jp",
    "update:stockcodes:dry": "tsx scripts/update-stockcodes.ts --dry-run",
    "generate:mappings": "tsx scripts/generate-category-symbol-mapping.ts",
    "generate:configs": "npm run generate:configs:tw && npm run generate:configs:jp && npm run generate:configs:us",
    "generate:configs:fresh": "npm run update:stockcodes && npm run generate:configs",
    
    "//": "=== 配置生成 - 各市場 (Config Generation by Market) ===",
    "generate:configs:tw": "tsx scripts/generate-yahoo-tw-configs.ts",
    "generate:configs:jp": "tsx scripts/generate-yahoo-jp-configs.ts",
    "generate:configs:us": "tsx scripts/generate-yahoo-us-configs.ts",
    "generate:configs:tw:eps": "tsx scripts/generate-yahoo-tw-configs.ts --type=eps",
    "generate:configs:tw:balance-sheet": "tsx scripts/generate-yahoo-tw-configs.ts --type=balance-sheet",
    "generate:configs:tw:cash-flow": "tsx scripts/generate-yahoo-tw-configs.ts --type=cash-flow-statement",
    "generate:configs:tw:income": "tsx scripts/generate-yahoo-tw-configs.ts --type=income-statement",
    "generate:configs:tw:dividend": "tsx scripts/generate-yahoo-tw-configs.ts --type=dividend",
    "generate:configs:tw:history": "tsx scripts/generate-yahoo-tw-configs.ts --type=history",
    "generate:configs:us:financials": "tsx scripts/generate-yahoo-us-configs.ts --type=financials",
    "generate:configs:us:history": "tsx scripts/generate-yahoo-us-configs.ts --type=history",
    "generate:configs:jp:performance": "tsx scripts/generate-yahoo-jp-configs.ts --type=performance",
    "generate:configs:jp:history": "tsx scripts/generate-yahoo-jp-history-configs.ts",
    
    "//": "=== 數據匯入 - 基礎面數據 (Fundamental Data Import) ===",
    "import:fundamental": "tsx scripts/import-fundamental-api.ts --category quarterly",
    "import:fundamental:file": "tsx scripts/import-fundamental-api.ts --file",
    "import:fundamental:batch": "tsx scripts/import-fundamental-api.ts --category quarterly && tsx scripts/import-ohlcv-api.ts --category daily",
    "import:fundamental:quarterly": "tsx scripts/import-fundamental-api.ts --category quarterly",
    "import:fundamental:daily": "tsx scripts/import-ohlcv-api.ts --category daily",
    "import:fundamental:metadata": "tsx scripts/import-symbols.ts && tsx scripts/import-category-labels-simple.ts",
    
    "//": "=== 數據匯入 - 按市場 (Import by Market) ===",
    "import:fundamental:tw": "tsx scripts/import-fundamental-api.ts --market tw",
    "import:fundamental:us": "tsx scripts/import-fundamental-api.ts --market us",
    "import:fundamental:jp": "tsx scripts/import-fundamental-api.ts --market jp",
    "import:fundamental:tw:quarterly": "tsx scripts/import-fundamental-api.ts --category quarterly --market tw",
    "import:fundamental:us:quarterly": "tsx scripts/import-fundamental-api.ts --category quarterly --market us",
    "import:fundamental:jp:quarterly": "tsx scripts/import-fundamental-api.ts --category quarterly --market jp",
    "import:fundamental:tw:daily": "tsx scripts/import-ohlcv-api.ts --category daily --market tw",
    "import:fundamental:us:daily": "tsx scripts/import-ohlcv-api.ts --category daily --market us",
    "import:fundamental:jp:daily": "tsx scripts/import-ohlcv-api.ts --category daily --market jp",
    
    "//": "=== 數據匯入 - 按類型 (Import by Type) ===",
    "import:tw:balance-sheet": "tsx scripts/import-fundamental-api.ts --market tw --type balance-sheet",
    "import:tw:cash-flow": "tsx scripts/import-fundamental-api.ts --market tw --type cash-flow-statement",
    "import:tw:income-statement": "tsx scripts/import-fundamental-api.ts --market tw --type income-statement",
    "import:tw:dividend": "tsx scripts/import-fundamental-api.ts --market tw --type dividend",
    "import:tw:eps": "tsx scripts/import-fundamental-api.ts --market tw --type eps",
    "import:tw:history": "tsx scripts/import-fundamental-api.ts --market tw --type history",
    "import:us:balance-sheet": "tsx scripts/import-fundamental-api.ts --market us --type balance-sheet",
    "import:us:cash-flow": "tsx scripts/import-fundamental-api.ts --market us --type cash-flow-statement",
    "import:us:income-statement": "tsx scripts/import-fundamental-api.ts --market us --type income-statement",
    "import:us:dividend": "tsx scripts/import-fundamental-api.ts --market us --type dividend",
    "import:us:eps": "tsx scripts/import-fundamental-api.ts --market us --type eps",
    "import:us:financials": "tsx scripts/import-fundamental-api.ts --market us --type financials",
    "import:us:history": "tsx scripts/import-fundamental-api.ts --market us --type history",
    "import:jp:balance-sheet": "tsx scripts/import-fundamental-api.ts --market jp --type balance-sheet",
    "import:jp:cash-flow": "tsx scripts/import-fundamental-api.ts --market jp --type cash-flow-statement",
    "import:jp:income-statement": "tsx scripts/import-fundamental-api.ts --market jp --type income-statement",
    "import:jp:dividend": "tsx scripts/import-fundamental-api.ts --market jp --type dividend",
    "import:jp:eps": "tsx scripts/import-fundamental-api.ts --market jp --type eps",
    "import:jp:performance": "tsx scripts/import-fundamental-api.ts --market jp --type performance",
    
    "//": "=== 數據匯入 - OHLCV 歷史數據 (OHLCV Historical Data Import) ===",
    "import:ohlcv": "tsx scripts/import-ohlcv-api.ts --category daily",
    "import:ohlcv:dry": "tsx scripts/import-ohlcv-api.ts --category daily --dry-run",
    "import:ohlcv:verbose": "tsx scripts/import-ohlcv-api.ts --category daily --verbose",
    "import:ohlcv:batch": "tsx scripts/import-ohlcv-api.ts --category daily --verbose",
    "import:ohlcv:tw": "tsx scripts/import-ohlcv-api.ts --market tw",
    "import:ohlcv:tw:dry": "tsx scripts/import-ohlcv-api.ts --market tw --dry-run",
    "import:ohlcv:tw:verbose": "tsx scripts/import-ohlcv-api.ts --market tw --verbose",
    "import:ohlcv:us": "tsx scripts/import-ohlcv-api.ts --market us",
    "import:ohlcv:us:dry": "tsx scripts/import-ohlcv-api.ts --market us --dry-run",
    "import:ohlcv:us:verbose": "tsx scripts/import-ohlcv-api.ts --market us --verbose",
    "import:ohlcv:jp": "tsx scripts/import-ohlcv-api.ts --market jp",
    "import:ohlcv:jp:dry": "tsx scripts/import-ohlcv-api.ts --market jp --dry-run",
    "import:ohlcv:jp:verbose": "tsx scripts/import-ohlcv-api.ts --market jp --verbose",
    
    "//": "=== 數據匯入 - 標籤與符號 (Labels & Symbols Import) ===",
    "import:labels": "tsx scripts/import-category-labels-simple.ts",
    "import:labels:simple": "tsx scripts/import-category-labels-simple.ts",
    "import:labels:dry": "tsx scripts/import-category-labels-simple.ts --dry-run",
    "import:labels:progress": "tsx scripts/import-category-labels-simple.ts --progress",
    "import:labels:chunk": "tsx scripts/import-category-labels-simple.ts --chunk-size=100 --progress",
    "clean:labels": "tsx scripts/clear-industry-labels.ts --confirm",
    "clean:labels:dry": "tsx scripts/clear-industry-labels.ts --dry-run",
    "clean:labels:hard": "tsx scripts/clear-industry-labels.ts --confirm --force-hard-delete",
    "clean:labels:hard:dry": "tsx scripts/clear-industry-labels.ts --dry-run --force-hard-delete",
    "clean:labels:tpe": "tsx scripts/clear-industry-labels.ts --market=TPE --confirm",
    "clean:labels:tpe:hard": "tsx scripts/clear-industry-labels.ts --market=TPE --confirm --force-hard-delete",
    "clean:labels:us": "tsx scripts/clear-industry-labels.ts --market=US --confirm",
    "clean:labels:us:hard": "tsx scripts/clear-industry-labels.ts --market=US --confirm --force-hard-delete",
    "clean:labels:jp": "tsx scripts/clear-industry-labels.ts --market=JP --confirm",
    "clean:labels:jp:hard": "tsx scripts/clear-industry-labels.ts --market=JP --confirm --force-hard-delete",
    "import:symbols": "tsx scripts/import-symbols.ts --batch-size=30",
    "import:symbols:dry": "tsx scripts/import-symbols.ts --dry-run --batch-size=30",
    "import:symbols:tpe": "tsx scripts/import-symbols.ts --market=TPE --batch-size=30",
    "import:symbols:us": "tsx scripts/import-symbols.ts --market=US --batch-size=30",
    "import:symbols:jp": "tsx scripts/import-symbols.ts --market=JP --batch-size=30",
    "import:symbols:small": "tsx scripts/import-symbols.ts --batch-size=10",
    
    "//": "=== 快速設置與重置 (Quick Setup & Reset) ===",
    "setup:all": "npm run pipeline:data-only",
    "setup:structured": "npm run import:fundamental:batch && npm run import:symbols && npm run import:labels",
    "setup:quarterly": "npm run import:fundamental:quarterly && npm run import:symbols",
    "setup:daily": "npm run import:fundamental:daily",
    "setup:metadata": "npm run import:fundamental:metadata && npm run import:symbols && npm run import:labels",
    "setup:tw": "npm run import:fundamental:tw && npm run import:symbols:tpe && npm run import:labels",
    "setup:us": "npm run import:fundamental:us && npm run import:symbols:us && npm run import:labels",
    "setup:jp": "npm run import:fundamental:jp && npm run import:symbols:jp && npm run import:labels",
    "setup:symbols": "npm run generate:mappings && npm run import:symbols && npm run import:labels",
    "setup:legacy": "npm run generate:mappings && npm run import:symbols && npm run import:labels:simple",
    "reset:all": "npm run clear:labels:hard && npm run setup:all",
    "reset:soft": "npm run clear:labels && npm run import:labels",
    "reset:symbols": "npm run clear:labels:hard && npm run setup:symbols",
    
    "//": "=== 完整工作流程 (Complete Workflows) ===",
    "flow:tw:full": "npm run generate:configs:tw && npm run crawl:tw:quarterly",
    "flow:tw:history": "npm run generate:configs:tw:history && npm run crawl:tw:history",
    "flow:us:full": "npm run generate:configs:us && npm run crawl:us:quarterly",
    "flow:us:history": "npm run generate:configs:us:history && npm run crawl:us:history",
    "flow:jp:full": "npm run generate:configs:jp && npm run crawl:jp:quarterly",
    "test-flow:tw:full": "npm run generate:configs:tw && npm run crawl:test:tw",
    "test-flow:us:full": "npm run generate:configs:us && npm run crawl:test:us",
    "test-flow:jp:full": "npm run generate:configs:jp && npm run crawl:test:jp",
    "test-flow:tw:eps": "npm run generate:configs:tw:eps && npm run crawl:test:tw --type=eps",
    "test-flow:single": "npm run generate:configs:tw:eps -- --symbol=2330 && npx tsx src/cli.ts --config config-categorized/quarterly/tw/yahoo-finance-tw-eps-2330_TW.json",
    
    "//": "=== 批次爬取命令 (Batch Crawling) ===",
    "crawl-batch": "npx tsx src/cli.ts crawl-batch",
    "crawl:daily": "npx tsx src/cli.ts crawl-batch --category=daily",
    "crawl:quarterly": "npx tsx src/cli.ts crawl-batch --category=quarterly",
    "crawl:metadata": "npx tsx src/cli.ts crawl-batch --category=metadata",
    "crawl:tw": "npx tsx src/cli.ts crawl-batch --market=tw",
    "crawl:us": "npx tsx src/cli.ts crawl-batch --market=us",
    "crawl:jp": "npx tsx src/cli.ts crawl-batch --market=jp",
    "crawl:tw:daily": "npx tsx src/cli.ts crawl-batch --category=daily --market=tw",
    "crawl:tw:quarterly": "npx tsx src/cli.ts crawl-batch --category=quarterly --market=tw",
    "crawl:tw:history": "npx tsx src/cli.ts crawl-batch --category=daily --market=tw --type=history",
    "crawl:us:daily": "npx tsx src/cli.ts crawl-batch --category=daily --market=us",
    "crawl:us:quarterly": "npx tsx src/cli.ts crawl-batch --category=quarterly --market=us",
    "crawl:us:history": "npx tsx src/cli.ts crawl-batch --category=daily --market=us --type=history",
    "crawl:jp:daily": "npx tsx src/cli.ts crawl-batch --category=daily --market=jp",
    "crawl:jp:quarterly": "npx tsx src/cli.ts crawl-batch --category=quarterly --market=jp",
    
    "//": "=== 批次爬取 - 狀態與監控 (Batch Status & Monitoring) ===",
    "crawl:resume": "npx tsx src/cli.ts crawl-batch --status",
    "crawl:status": "npx tsx src/cli.ts crawl-batch --status",
    "crawl:stats": "npx tsx src/cli.ts crawl-batch --stats",
    "crawl:errors": "npx tsx src/cli.ts crawl-batch --error-report",
    "crawl:test": "npx tsx src/cli.ts crawl-batch --limit=5 --concurrent=1",
    "crawl:test:tw": "npx tsx src/cli.ts crawl-batch --market=tw --limit=3 --concurrent=1",
    "crawl:test:us": "npx tsx src/cli.ts crawl-batch --market=us --limit=3 --concurrent=1",
    "crawl:test:jp": "npx tsx src/cli.ts crawl-batch --market=jp --limit=3 --concurrent=1",
    
    "//": "=== Site-based 並發控制 - 區域爬取 (Site-based Concurrency) ===",
    "crawl:tw:site": "npx tsx src/cli.ts crawl-batch --market=tw --site-concurrency",
    "crawl:us:site": "npx tsx src/cli.ts crawl-batch --market=us --site-concurrency",
    "crawl:jp:site": "npx tsx src/cli.ts crawl-batch --market=jp --site-concurrency",
    "crawl:all:site": "npx tsx src/cli.ts crawl-batch --site-concurrency",
    
    "//": "=== Site-based 並發控制 - 統計與監控 (Site-based Stats & Monitoring) ===",
    "crawl:site-stats": "npx tsx src/cli.ts crawl-batch --site-stats",
    "crawl:site-monitor": "npx tsx src/cli.ts crawl-batch --site-stats --verbose",
    "crawl:site-debug": "npx tsx src/cli.ts crawl-batch --site-stats --concurrent=1 --verbose",
    "crawl:site:performance": "npx tsx src/cli.ts crawl-batch --performance-report --site-stats",
    "crawl:site:analysis": "npx tsx src/cli.ts crawl-batch --site-stats --error-report",
    
    "//": "=== Site-based 並發控制 - 性能測試 (Site-based Performance Testing) ===",
    "crawl:site:high-concurrency": "npx tsx src/cli.ts crawl-batch --limit=20 --verbose",
    "crawl:site:stability": "npx tsx src/cli.ts crawl-batch --category=quarterly --delay=1000",
    "crawl:site:stress-test": "npx tsx src/cli.ts crawl-batch --limit=50 --site-concurrency",
    "crawl:site:benchmark": "npx tsx src/cli.ts crawl-batch --limit=10 --site-stats --verbose",
    
    "//": "=== Site vs Global 性能對比 (Site vs Global Performance Comparison) ===",
